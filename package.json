{
  "name": "@holdem/root",
  "module": "index.ts",
  "type": "commonjs",
  "workspaces": [
    "backend",
    "frontend",
    "shared",
    "terminal",
    "database"
  ],
  "scripts": {
    "backend": "cd backend && bun run api",
    "frontend": "cd frontend && bun run dev",
    "dev": "concurrently \"bun run backend\" \"bun run frontend\"",
    "prepare": "husky",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\""
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "private": true,
  "devDependencies": {
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "concurrently": "^9.2.1",
    "knex": "^3.1.0",
    "sqlite3": "^5.1.7"
  }
}
